{
    "$id": "transfer:v1",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "payer",
        "payee",
        "value"
    ],
    "additionalProperties": false,
    "properties": {
        "payer": {
            "type": "integer",
            "minimum": 1
        },
        "payee": {
            "type": "integer",
            "minimum": 1
        },
        "value": {
            "type": "number",
            "minimum": 0.01
        }
    }
}